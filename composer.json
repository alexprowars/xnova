{
    "name": "xnova/server",
    "type": "project",
    "description": "The Xnova game backend server",
    "config": {
        "platform": {
            "php": "8.3"
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require": {
        "php": "^8.3",
        "ext-gd": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "filament/filament": "^3.3",
        "filament/spatie-laravel-media-library-plugin": "^3.3",
        "filament/spatie-laravel-settings-plugin": "^3.2",
        "laravel/framework": "^12.0.0",
        "laravel/reverb": "^1.4",
        "laravel/socialite": "^5.5.7",
        "laravel/tinker": "^2.9",
        "malzariey/filament-daterangepicker-filter": "^3.2",
        "nubs/random-name-generator": "^2.1",
        "shuvroroy/filament-spatie-laravel-backup": "^2.2",
        "socialiteproviders/vkontakte": "^5.0.0",
        "spatie/laravel-medialibrary": "^11.12",
        "spatie/laravel-permission": "^6.18",
        "technikermathe/blade-lucide-icons": "^3.102",
        "webbingbrasil/filament-advancedfilter": "^3.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.2",
        "mockery/mockery": "^1.6",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-faker": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.1",
        "phpstan/phpstan": "^2.1"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-idn": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan schedule:run\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" --names=server,schedule,queue,logs"
        ],
        "test": "vendor/bin/pest",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "prefer-stable": true
}
